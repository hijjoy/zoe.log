generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


model Post {
  id           Int      @id @default(autoincrement())
  slug         String   @unique
  title        String
  description  String?
  categories   String[] 
  createdAt    DateTime @default(now())
  content      String
}
